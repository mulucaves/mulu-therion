######################################## Layouts  ################################################

layout layout
  copy common
  copy LayoutScale2000
  copy water-blue
  
  scale 1 2000
  base-scale 1 1000
  rotate 60
  layers on
  symbol-show group centreline
   code tex-map
     \cavename={Clearwater Cave}
    \topotitle={Surveyed by}
    \cartotitle={Drawn by}
    \explotitle={Explored by}
    code metapost
     def l_survey_cave (expr p) =
       draw p withpen PenD withcolor (1.0, 0.0, 0.0);
     enddef;
   endcode
   colour map-fg altitude
#debug station-names
#debug scrap-names
map-header 0 0 sw
legend off
endlayout
